<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mini_proj" parent="Base.Theme.Mini_proj">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="Base.Theme.Mini_proj" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="bg">@color/bluebg</item>
        <item name="cc">@color/ccl</item>
        <item name="tc">@color/bluefg</item>
        <item name="android:colorPrimary">@color/bluefg</item>
        <item name="android:colorSecondary">@color/ccl</item>
        <item name="android:colorBackground">@color/bluebg</item>
        <item name="colorOnBackground">@color/bluefg</item>
        <item name="android:textColor">@color/bluefg</item>
        <item name="colorOutline">@color/bluefg</item>
        <item name="android:buttonTint">@color/bluefg</item>
        <item name="android:colorForeground">@color/bluefg</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button.Custom</item>
        <item name="buttonStyle">@style/Base.Widget.AppCompat.Button</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="TextAppearance.AppCompat.Button.Custom" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/bluefg</item>
        <item name="android:backgroundTint">@color/bluebg</item>
        <item name="fontFamily">@font/nova_mono</item>
    </style>
    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:textColor">#002945</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:backgroundTint">#2795E3</item>
        <item name="fontFamily">@font/exo_2</item>
        <item name="android:textColorPrimaryDisableOnly">#31506A</item>

    </style>
    <style name="DisableButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/disablefg</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:backgroundTint">@color/disablebg</item>
        <item name="android:textColorPrimaryDisableOnly">#31506A</item>

    </style>
</resources>